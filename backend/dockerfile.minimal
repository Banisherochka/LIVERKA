# Minimal FastAPI Dockerfile without external dependencies
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies only
RUN apt-get update && apt-get install -y \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy minimal application
COPY . .

# Expose port
EXPOSE 8000

# Run basic Python server
CMD ["python", "run_isolated.py"]